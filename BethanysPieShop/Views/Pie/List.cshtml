@model PiesListViewModel
@*specifices that the model for this view is PiesListViewModel*@

<h1>@Model.CurrentCategory</h1> @*even though CurrentCategory lives in piesListViewModel, we use 'Model', as it can be accessed via the Model propert*@
@foreach (var pie in Model.Pies) /*iterates over Pies in the Model */
{
    <div class="col-sm-4 col-lg-4 col-md-4">
        <div class="thumbnail">
            <img src="@pie.ImageThumbnailUrl" alt="">
            <div class="caption">
                <h3 class="pull-right">@pie.Price.ToString("c")</h3>
                <h3>
                    <a>@pie.Name</a>
                </h3>
                <p>@pie.ShortDescription</p>
            </div>
        </div>
    </div>
}