@model IEnumerable<BethanysPieShop.Models.Pie>
@*specifies that the model for this view will be an IEnumberable of pies*@

<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bethany's Pie Shop</title>

</head>
<body>
    <h1>@ViewBag.CurrentCategory</h1>
    @foreach (var pie in Model) /*iterates over the IEnumerable @model */
    {
        <div>
            <h2>@pie.Name</h2>
            <h3>@pie.Price.ToString("c")</h3>
            <h4>@pie.Category.CategoryName</h4>
        </div>
    }
</body>
</html>